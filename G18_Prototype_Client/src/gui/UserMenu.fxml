<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.UserMenuController">
   <children>
      <Label fx:id="lblTitle" layoutX="115.0" layoutY="35.0" text="Main Menu" />
      
      <VBox alignment="CENTER" layoutX="75.0" layoutY="90.0" spacing="25.0">
         <children>
            <Button fx:id="btnView" mnemonicParsing="false" onAction="#clickViewAll" prefHeight="50.0" prefWidth="200.0" styleClass="menu-button" text="View All Orders" />
            <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#clickUpdate" prefHeight="50.0" prefWidth="200.0" styleClass="menu-button" text="Update Order" />
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#getExitBtn" prefHeight="50.0" prefWidth="200.0" styleClass="exit-button" text="Exit" />
         </children>
      </VBox>
      
      <Label fx:id="lblStatus" layoutX="14.0" layoutY="370.0" text="System Status: Connected" />
   </children>
</AnchorPane>