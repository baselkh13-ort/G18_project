<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.InsertOrderNumberController">
   <children>
      <Label layoutX="30.0" layoutY="40.0" text="Enter Order Number to Update:" textFill="#37474f">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      
      <TextField fx:id="txtOrderNum" layoutX="30.0" layoutY="70.0" prefWidth="240.0" promptText="e.g. 123 (3 numbers)" />
      
      <Button fx:id="btnSearch" layoutX="90.0" layoutY="120.0" mnemonicParsing="false" onAction="#searchOrder" prefWidth="120.0" text="Search Order" />
      
      <Label fx:id="lblError" alignment="CENTER" layoutX="30.0" layoutY="170.0" prefWidth="240.0" textFill="RED">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      
      <Button fx:id="btnBack" layoutX="110.0" layoutY="200.0" mnemonicParsing="false" onAction="#getBackBtn" text="Back to Menu" />
   </children>
</AnchorPane>