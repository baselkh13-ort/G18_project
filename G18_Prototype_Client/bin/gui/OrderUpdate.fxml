<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="550.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.OrderUpdateController">
   <children>
      <Label fx:id="lblTitle" layoutX="140.0" layoutY="20.0" text="Order Details" />
      
      <Label layoutX="50.0" layoutY="75.0" text="Order Number:" />
      <TextField fx:id="txtOrderNum" editable="false" layoutX="180.0" layoutY="70.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="125.0" text="Subscriber ID:" />
      <TextField fx:id="txtSubscriber" editable="false" layoutX="180.0" layoutY="120.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="175.0" text="Confirm Code:" />
      <TextField fx:id="txtConfirmationCode" editable="false" layoutX="180.0" layoutY="170.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="225.0" text="Creation Date:" />
      <TextField fx:id="txtDateOfPlacingOrder" editable="false" layoutX="180.0" layoutY="220.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="275.0" text="Order Date:" />
      <TextField fx:id="txtDate" layoutX="180.0" layoutY="270.0" prefWidth="200.0" promptText="yyyy-mm-dd" />

      <Label layoutX="50.0" layoutY="325.0" text="Guests Amount:" />
      <TextField fx:id="txtGuests" layoutX="180.0" layoutY="320.0" prefWidth="200.0" />

      <Button fx:id="btnSave" layoutX="180.0" layoutY="380.0" mnemonicParsing="false" onAction="#saveChanges" prefHeight="35.0" prefWidth="200.0" text="Save Changes" />
      
      <Button fx:id="btnBack" layoutX="180.0" layoutY="430.0" mnemonicParsing="false" onAction="#closeWindow" prefHeight="30.0" prefWidth="200.0" text="Back to Menu" />
      
      <Label fx:id="lblMessage" alignment="CENTER" layoutX="50.0" layoutY="480.0" prefWidth="350.0" />
   </children>
</AnchorPane>