<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ListView?>

<Pane prefHeight="500.0" prefWidth="600.0" 
      xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="gui.ServerPortFrameController"
      stylesheets="@ServerPort.css">
   <children>
      <Label layoutX="20.0" layoutY="25.0" text="DB Password:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      <TextField fx:id="passtxt" layoutX="150.0" layoutY="20.0" prefWidth="180.0" prefHeight="40.0" style="-fx-font-size: 16px;"/>

      <Button fx:id="btnDone" layoutX="350.0" layoutY="20.0" 
              mnemonicParsing="false" onAction="#Done" text="Start" 
              prefWidth="100.0" prefHeight="40.0" style="-fx-font-size: 16px; -fx-base: #4CAF50;" />
              
      <Button fx:id="btnReset" layoutX="350.0" layoutY="20.0" 
              mnemonicParsing="false" onAction="#resetControls" text="Reset" 
              prefWidth="100.0" prefHeight="40.0" styleClass="btn-reset" />

      <Button fx:id="btnExit" layoutX="470.0" layoutY="20.0" 
              mnemonicParsing="false" onAction="#getExitBtn" text="Exit" 
              prefWidth="100.0" prefHeight="40.0" style="-fx-font-size: 16px; -fx-base: #f44336;" />

      <ListView fx:id="listClients" layoutX="20.0" layoutY="80.0" prefHeight="180.0" prefWidth="560.0" />
      
      <TextArea fx:id="logArea" layoutX="20.0" layoutY="270.0" 
                prefWidth="560.0" prefHeight="210.0" 
                editable="false" wrapText="true" style="-fx-font-size: 14px;"/>
   </children>
</Pane>